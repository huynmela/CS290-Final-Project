<main id="modal-comment">
    <div class="modal-comment-dialog">
        <div class="modal-comment-header">
            <h4>Post a comment!</h4>
        </div>
        <div class="modal-comment-body">
            <div class="comment-input-element">
                <label for="comment-text-input"></label>
                <textarea id="comment-text-input">Type here...</textarea> <!--Need to reset it when the user click it on the js-->
            </div>
        </div>
        <div class="modal-comment-footer">
            <button type="button" class="modal-comment-button">Post comment</button>
        </div>
    </div>
</main>
