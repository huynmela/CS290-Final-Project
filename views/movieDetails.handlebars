<h1 class="movie-section-title"><i>{{title}}</i></h1>

<!--class for movie listings-->

<main class="movie-container">

    <article class="movie-listing">
        <div class="movie-listing-image">
            <img src="{{photo}}" alt="" width="300" height="420" />
        </div>
        <p class="movie-desc">
            {{desc}}
        </p>
    </article>
</main>

<main class="comments-section">

    <article class="comment">
        <div class="commenter-icon">
            <!-- The <i> tag below includes the comments icon from Font Awesome.  Do not directly style this element. -->
            <i class="fas fa-comments"></i>
        </div>
        <div class="comment-content">
            <p class="comment-text">
                I love this movie! Amazing!!!
            </p>
            <p class="comment-author">
                <a href="#">Spiderman-Lover</a>
            </p>
        </div>
    </article>

